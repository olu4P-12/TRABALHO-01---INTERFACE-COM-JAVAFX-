<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>

<VBox spacing="20" alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.semaforo.HelloController"
      prefWidth="250" prefHeight="400">

    <padding>
        <Insets top="20" bottom="20" left="20" right="20"/>
    </padding>

    <Circle fx:id="redLight" radius="40" fill="gray"/>
    <Circle fx:id="yellowLight" radius="40" fill="gray"/>
    <Circle fx:id="greenLight" radius="40" fill="gray"/>

    <Button text="Iniciar" onAction="#start"/>
    <Button text="Parar" onAction="#stop"/>

</VBox>
